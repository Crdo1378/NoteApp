<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="250dp"
    android:padding="5dp"
    android:layout_centerHorizontal="true"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txAddLb"
        android:hint="Thêm nhãn"
        android:background="@android:color/transparent"
        android:drawablePadding="5dp"
        android:textSize="20dp"/>
    <ListView
        android:layout_below="@id/txAddLb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvTabLabel"/>
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btAddLabel"
        android:layout_toRightOf="@id/txAddLb"
        android:background="@drawable/ic_check_circle_black_24dp"/>

</RelativeLayout>